<style>
  video {
    padding: 2rem;
    margin: 2.2rem;
    border-radius: 40px;
    margin-left: 2.5rem;
  }
  .overskrift_blaa {
    width: 80%;
    padding: 2.5rem;
    margin-bottom: -3rem;
  }
  .grid_1-1 {
    display: flex;
    gap: 60px;
    margin: 1rem;
  }
  .ballon_header {
    width: 25%;
  }
  .blaa {
    background-color: #d9edff;
    height: 370px;
  }
  .gul {
    background-color: #fffef4;
  }
  .afsnit_2header {
    margin-top: 13rem;
    width: 50%;
    margin-left: 11rem;
  }
  .vores_mission {
    width: 40%;
    margin-left: 13rem;
  }
  .ai_figur {
    width: 50%;
    margin-left: 9rem;
    margin-block: 5rem;
  }
  .afsnit3 {
    background-image: url(billeder/ballonogbamse.webp);
    background-position: center;
    background-size: cover;
    aspect-ratio: 1440/2738;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-content: center;
    gap: 1rem;
  }

  .besked {
    margin-block: 1rem;
    width: 50%;
  }

  .quotation1 {
    width: 10%;
    margin-left:-2rem;
  }
    .quotation2 {
      width: 10%;
      margin-left: 5rem;
      rotate: 180deg;
    }

  .tekst {
    max-width: 65ch;
    margin: auto;
    padding: 1rem;
    font-size: 0.8rem;
  }
  .små_glimt {
    width: 50%;
    margin-left: 11rem;
    margin-block: 2rem;
  }
  .hat_stav {
    display: flex;
    width: 40%;
    gap: 5rem;
    margin-left: 12rem;
    align-content: center;
    justify-content: space-around;
    margin-block: 4rem;
  }
  .stav {
    rotate: -60deg;
  }
  .hat {
    rotate: 200deg;
  }
  .uventet {
    width: 50%;
    margin-block: 2rem;
  }

  .container1 {
margin: 2rem auto;
width: 14rem;
}

  .container2 {
margin: 2rem auto;
width: 14rem;
}

  .container3 {
margin: 2rem auto;
width: 14rem;
}

.card {
padding: 15px;
border-radius: 10px;
background-color: #C1E8D6;
}

.card2 {
padding: 15px;
border-radius: 10px;
background-color: #9FD1FF;
}
.card3 {
padding: 15px;
border-radius: 10px;
background-color: #EA9898;
}

.card-body {
    display: flex;
flex-direction: column;
    padding: 1rem 0;
}
img {
    width: 100%;
    border-radius: 10px;
    object-fit: cover;
}

.knap img {
    padding-top: 0.5rem;
    width: 20%;
    border-radius: 0;
}

  @media screen and (min-width: 800px) {
    video {
      border-radius: 50px;
      width: 85%;
      margin-left: 8rem;
    }
    .afsnit_2header {
      margin-top: 60rem;
      width: 40%;
      margin-left: 30rem;
    }
    .vores_mission {
      width: 30%;
      margin-left: 33rem;
    }
    .aifigur_tekst {
      display: flex;
      gap: 12rem;
      margin-block: 3rem;
    }

      .tekst {
    max-width: 65ch;
    margin: auto;
    padding: 1rem;
    font-size: 1.4rem;
  }
    .ai_figur {
      width: 40%;
      margin-left: 2rem;
    }
    .små_glimt {
      width: 40%;
      margin-left: 33rem;
      margin-block: 4rem;
    }
    .hat_stav {
      display: flex;
      width: 22%;
      gap: 5rem;
      margin-right: 12rem;
      align-content: center;
      justify-content: space-around;
      margin-block: 4rem;
    }
    .stav {
      rotate: -60deg;
      width: 22%;
    }
    .hat {
      rotate: 220deg;
    }
    .hat_stav_tekst {
      display: flex;
      gap: 8rem;
    }

    .afsnit3 {
      background-image: url(billeder/ballonogbamse.webp);
      background-position: center;
      background-size: cover;
      aspect-ratio: 1440/2738;
      flex-direction: column;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      gap: 1rem;
    }

    .besked {
      margin-block: 1rem;
      width: 40%;
    }
    .besked1 {
      margin-left: -2rem;
    }
    .besked2 {
      margin-left: 40rem;
      margin-top: -40rem;
    }
    .uventet {
      width: 40%;
      margin-bottom: -40rem;
      margin-top: -5rem;
      margin-left: 22rem;
    }
.grid1-1-1 {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  margin: 0 30rem;
  gap: 20px;
}

.card-body {
    font-size: 1.2rem;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}
.card2 {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
}

.card2:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.card3 {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
