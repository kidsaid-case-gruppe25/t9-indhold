---
import MainLayout from "../layouts/MainLayout.astro";
import Cards from "../components/Cards.astro";
---

<MainLayout>
  <main>
    <section class="blaa">
      <div class="grid_1-1">
        <div class="overskrift_blaa">
          <img src="../../billeder/LOGO_blaa.svg" alt="videoer" />
        </div>
        <div class="ballon_header">
          <img src="../../billeder/balloner.webp" alt="balloner" />
        </div>
      </div>

      <video width="500" height="auto" controls>
        <source src="../../billeder/Hospis_film.mp4" type="video/mp4" />
      </video>
    </section>

    <Cards />
  </main>
</MainLayout>

<style>
  video {
    padding: 2rem;
    margin: 2.2rem;
    border-radius: 40px;
  }
  .overskrift_blaa {
    width: 60%;
    padding: 2.5rem;
    margin-bottom: -3rem;
  }
  .grid_1-1 {
    display: flex;
    gap: 60px;
    margin: 1rem;
  }
  .ballon_header {
    width: 25%;
  }
  .blaa {
    background-color: #d9edff;
    height: 450px;
  }
</style>
